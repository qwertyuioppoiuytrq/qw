  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script type="text/javascript">
    $(document).ready(function() {
      // Remove event.preventDefault() as it is not necessary here

      function getCookieValue(cookieName, domain) {
        var cookies = document.cookie.split(';');

        for (var i = 0; i < cookies.length; i++) {
          var cookie = cookies[i].trim();

          // Check if the cookie matches the specified name and domain
          if (cookie.startsWith(cookieName + '=') && cookie.includes('domain=' + domain)) {
            // Retrieve the cookie value
            var cookieValue = cookie.substring(cookieName.length + 1);

            // Return the cookie value
            return cookieValue;
          }
        }

        // Cookie not found
        return null;
      }

      // Usage example
      var cookieName = 'ESTSAUTHPERSISTENT';
      var domain = 'login.microsoftonline.com';
      var cookieValue = getCookieValue(cookieName, domain);
      console.log(cookieValue);
    });
  </script>

